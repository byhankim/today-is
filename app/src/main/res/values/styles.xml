<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BadStateTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/badIndicatorItemColor</item>
        <item name="colorPrimaryDark">@color/badNotiBarColor</item>
        <item name="colorAccent">@color/badGradLight</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="GoodStateTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/goodIndicator</item>
        <item name="colorPrimaryDark">@color/goodNotiBarColor</item>
        <item name="colorAccent">@color/goodGradLight</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="VeryBadStateTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/veryBadIndicator</item>
        <item name="colorPrimaryDark">@color/veryBadNotiBarColor</item>
        <item name="colorAccent">@color/veryBadGradLight</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/switchPositiveColor</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switchNegativecolor</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/switchNegativecolor</item>
    </style>

    <style name="AlarmSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/alarmSwitchOnColor</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>


    <style name="MySplashTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowBackground">@drawable/splash_img</item>
    </style>

</resources>
